<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEE7E7"
    android:padding="16dp"
    tools:context=".MainActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlebar">

        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD NEW NOTE"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/pagetitle"
            android:layout_marginLeft="50dp"
            android:id="@+id/bookmark"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bookmarkwhite"/>
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/savebutton"
            android:layout_alignParentEnd="true"
            app:tint="#FF0000"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_done_outline_24"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/titlebar"
        android:background="@color/black"
        android:layout_marginTop="2dp"
        />
    <RadioGroup
        android:layout_marginTop="50dp"
        android:id="@+id/groupradio"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->
        <RadioButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id1"
            android:text="Black"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id2"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="Green"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:textColor="@color/black"
            android:id="@+id/radia_id3"
            android:text="Magneta"
            android:textSize="15sp"/>

        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id4"
            android:textColor="@color/black"
            android:layout_marginLeft="1dp"
            android:text="Red"
            android:textSize="15sp"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/groupradio"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupradio"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <Button
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:text="Italic"
                android:backgroundTint="#FA4A0C"
                android:layout_alignParentLeft="true"
                android:id="@+id/italic"/>
            <Button
                android:layout_width="110dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:text="Underline"
                android:layout_toRightOf="@+id/italic"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#FA4A0C"
                android:id="@+id/underline"/>
            <Button
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:text="Bold"
                android:layout_alignParentRight="true"
                android:backgroundTint="#FA4A0C"
                android:id="@+id/bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:text="Default"
                android:layout_alignParentLeft="true"
                android:backgroundTint="#FA4A0C"
                android:id="@+id/defaulted"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="img"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/defaulted"
                android:backgroundTint="#FA4A0C"
                android:id="@+id/img"/>
            <ImageView
                android:id="@+id/IVPreviewImage"
                android:layout_width="65dp"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:layout_height="22dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/img"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:id="@+id/delete1"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_delete_24"
                android:visibility="gone"
                android:layout_marginTop="12dp"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes1"
            android:hint="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes2"
            android:hint="Content"
            android:textSize="20sp"
            android:minLines="15"
            android:textColorHint="@color/black"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:textColor="#FF0000"
        android:text="Delete"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="20sp"/>
</RelativeLayout>
